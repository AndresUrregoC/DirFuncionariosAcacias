<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".Autocompletar" >
    
    <TextView 
        android:layout_width="fill_parent"
        android:id="@+id/tvConexion"
        android:layout_height="20dp"
        android:text="@string/noconex"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:background="#EE3E3E"
        />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tvDirectorio"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.18"
            android:text="@string/directorio"
            android:textColor="#f82"
            android:textSize="18sp"
            android:textStyle="bold" 
            android:gravity="center_horizontal"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="6.05"
            android:src="@drawable/logo"
            android:contentDescription="@string/title_activity_splash"  />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibBuscar2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:src="@drawable/action_search"
        android:contentDescription="@string/title_activity_splash"  /> 

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/ivNombre"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/nom"
                android:contentDescription="@string/title_activity_splash"  />

            <ImageView
                android:id="@+id/ivServicio"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/syt" 
                android:layout_marginLeft="40dp"
                android:contentDescription="@string/title_activity_splash" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/ivCargo"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/car"
                android:contentDescription="@string/title_activity_splash" 
                />

            <ImageView
                android:id="@+id/ivSecretaria"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/sec"
                android:layout_marginLeft="40dp" 
                android:contentDescription="@string/title_activity_splash"/>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:gravity="bottom"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/title_activity_splash"
            android:src="@drawable/footer" />

    </RelativeLayout>

</LinearLayout><!-- From: file:/home/andresdev/AndroidStudioProjects/DirectorioAcacias/app/src/main/res/layout-small/fragment_principal.xml -->